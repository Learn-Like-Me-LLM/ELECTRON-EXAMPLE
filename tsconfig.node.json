// TypeScript configuration for Node.js-specific parts of the project (e.g., Vite, TanStack Router configs).
{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "sourceMap": true,
    "outDir": "dist-electron/main"
  },
  "include": [
    "electron/preload", "electron/main", 
    "vite.config.ts", 
    "tanstack.config.ts"],
  "exclude": ["node_modules", "dist"]
}
